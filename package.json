{
  "name": "apoint-app",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:prep && concurrently \"npm run dev -w @apoint/web\" \"npm run start:dev -w @apoint/api\"",
    "dev:prep": "node scripts/dev-prep.js",
    "dev:reset:win": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Get-Process node -ErrorAction SilentlyContinue | Stop-Process -Force\"",
    "qa:env:staging:init": "node scripts/mvp-env-init.js --env=staging",
    "qa:env:prod:init": "node scripts/mvp-env-init.js --env=prod",
    "qa:email:local": "node scripts/mvp-email-local-setup.js",
    "qa:secrets:local": "node scripts/mvp-secrets-local.js",
    "qa:preflight:mvp": "node scripts/mvp-preflight.js",
    "qa:preflight:staging": "node scripts/mvp-preflight.js --env=staging",
    "qa:preflight:prod": "node scripts/mvp-preflight.js --env=prod",
    "qa:preflight:staging:strict": "node scripts/mvp-preflight.js --env=staging --fail-on-warn",
    "qa:preflight:prod:strict": "node scripts/mvp-preflight.js --env=prod --fail-on-warn",
    "qa:smoke:mvp": "node scripts/mvp-go-live-smoke.js",
    "qa:smoke:email": "node scripts/mvp-email-smoke.js",
    "qa:smoke:email:staging": "node scripts/mvp-email-smoke.js --env=staging",
    "qa:smoke:email:prod": "node scripts/mvp-email-smoke.js --env=prod",
    "qa:smoke:stripe": "node scripts/mvp-stripe-smoke.js",
    "qa:smoke:stripe:staging": "node scripts/mvp-stripe-smoke.js --env=staging",
    "qa:smoke:stripe:prod": "node scripts/mvp-stripe-smoke.js --env=prod",
    "qa:smoke:staging": "node scripts/mvp-go-live-smoke.js --env=staging",
    "qa:smoke:prod": "node scripts/mvp-go-live-smoke.js --env=prod",
    "qa:smoke:widget": "node scripts/mvp-go-live-smoke.js --mode=widget",
    "qa:smoke:widget:staging": "node scripts/mvp-go-live-smoke.js --env=staging --mode=widget",
    "qa:smoke:widget:prod": "node scripts/mvp-go-live-smoke.js --env=prod --mode=widget",
    "qa:staging:gate": "node scripts/mvp-env-gate.js --env=staging",
    "qa:staging:gate:widget": "node scripts/mvp-env-gate.js --env=staging --smoke-mode=widget",
    "qa:staging:gate:local": "node scripts/mvp-env-gate.js --env=staging --skip-migrate --smoke-api-url=http://localhost:3001",
    "qa:staging:gate:quick": "node scripts/mvp-env-gate.js --env=staging --skip-migrate --smoke-api-url=http://localhost:3001",
    "qa:staging:gate:widget:local": "node scripts/mvp-env-gate.js --env=staging --smoke-mode=widget --skip-migrate --smoke-api-url=http://localhost:3001",
    "qa:staging:gate:widget:quick": "node scripts/mvp-env-gate.js --env=staging --smoke-mode=widget --skip-migrate --smoke-api-url=http://localhost:3001",
    "qa:staging:gate:strict:local": "node scripts/mvp-env-gate.js --env=staging --strict --skip-migrate --smoke-api-url=http://localhost:3001 --allow-placeholder-env",
    "qa:staging:gate:strict:quick": "node scripts/mvp-env-gate.js --env=staging --strict --skip-migrate --smoke-api-url=http://localhost:3001 --allow-placeholder-env",
    "qa:staging:gate:strict:widget": "node scripts/mvp-env-gate.js --env=staging --strict --smoke-mode=widget",
    "qa:staging:gate:strict:widget:local": "node scripts/mvp-env-gate.js --env=staging --strict --smoke-mode=widget --skip-migrate --smoke-api-url=http://localhost:3001 --allow-placeholder-env",
    "qa:staging:gate:strict:widget:quick": "node scripts/mvp-env-gate.js --env=staging --strict --smoke-mode=widget --skip-migrate --smoke-api-url=http://localhost:3001 --allow-placeholder-env",
    "qa:staging:gate:strict": "node scripts/mvp-env-gate.js --env=staging --strict",
    "qa:prod:gate": "node scripts/mvp-env-gate.js --env=prod",
    "qa:prod:gate:widget": "node scripts/mvp-env-gate.js --env=prod --smoke-mode=widget",
    "qa:prod:gate:dry": "node scripts/mvp-env-gate.js --env=prod --strict --skip-migrate --skip-smoke",
    "qa:prod:gate:widget:dry": "node scripts/mvp-env-gate.js --env=prod --strict --smoke-mode=widget --skip-migrate --skip-smoke",
    "qa:prod:gate:strict:widget": "node scripts/mvp-env-gate.js --env=prod --strict --smoke-mode=widget",
    "qa:prod:gate:strict": "node scripts/mvp-env-gate.js --env=prod --strict",
    "qa:release:staging": "npm run qa:staging:gate:strict",
    "qa:release:staging:widget": "npm run qa:staging:gate:strict:widget",
    "qa:release:staging:widget:quick": "npm run qa:staging:gate:strict:widget:quick",
    "qa:release:prod": "npm run qa:prod:gate:strict",
    "qa:release:prod:widget": "npm run qa:prod:gate:strict:widget",
    "qa:release:prod:widget:dry": "npm run qa:prod:gate:widget:dry",
    "qa:release:help": "node scripts/qa-release-summary.js",
    "qa:release:doctor": "node scripts/qa-release-doctor.js",
    "qa:release:doctor:staging:widget:local": "node scripts/qa-release-doctor.js --env=staging --mode=widget --scope=local --api-url=http://localhost:3001",
    "qa:release:doctor:staging:widget:tenant": "node scripts/qa-release-doctor.js --env=staging --mode=widget --scope=local --api-url=http://localhost:3001 --tenant-slug=REEMPLAZAR_SLUG",
    "qa:release:doctor:failfast": "node scripts/qa-release-doctor.js --failfast",
    "qa:release:doctor:failfast:staging:widget:local": "node scripts/qa-release-doctor.js --env=staging --mode=widget --scope=local --api-url=http://localhost:3001 --failfast",
    "dev:web": "npm run dev -w @apoint/web",
    "dev:api": "npm run start:dev -w @apoint/api",
    "build": "npm run build -w @apoint/web && npm run build -w @apoint/api",
    "lint": "npm run lint -w @apoint/web && npm run lint -w @apoint/api",
    "typecheck": "npm run typecheck -w @apoint/web && npm run build -w @apoint/api"
  },
  "devDependencies": {
    "concurrently": "8.2.2"
  }
}
